{
  "name": "playwright-orangehrm-autosuite",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "capstone automation test suite for OrangeHRM using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "rimraf allure-results allure-report && cross-env ENV=qa npx playwright test",
    "generate-report": "npx allure generate ./allure-results --clean -o ./allure-report",
    "open-report": "npx allure open ./allure-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.1",
    "@reportportal/agent-js-playwright": "^5.1.11",
    "@types/node": "^24.1.0",
    "allure-playwright": "^3.4.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "memoizee": "^0.4.17"
  }
}
